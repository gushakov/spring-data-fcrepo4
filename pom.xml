<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <groupId>ch.unil</groupId>
    <artifactId>spring-data-fcrepo4</artifactId>
    <version>1.0-SNAPSHOT</version>

    <properties>
        <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
        <project.reporting.outputEncoding>UTF-8</project.reporting.outputEncoding>
        <skipITs>false</skipITs>
        <!-- use "run" to pause after indexer start or "start" to run the tests and quit -->
        <indexer.start.mode>start</indexer.start.mode>
    </properties>

    <dependencies>

        <!--
            COMPILE
        -->


        <dependency>
            <groupId>net.bytebuddy</groupId>
            <artifactId>byte-buddy</artifactId>
            <version>0.7-rc1</version>
        </dependency>

        <dependency>
            <groupId>org.slf4j</groupId>
            <artifactId>slf4j-api</artifactId>
        </dependency>

        <dependency>
            <groupId>org.fcrepo</groupId>
            <artifactId>fcrepo-client-impl</artifactId>
            <version>4.2.0</version>
        </dependency>

        <dependency>
            <groupId>org.springframework</groupId>
            <artifactId>spring-context</artifactId>
            <exclusions>
                <exclusion>
                    <groupId>commons-logging</groupId>
                    <artifactId>commons-logging</artifactId>
                </exclusion>
            </exclusions>
        </dependency>

        <dependency>
            <groupId>org.springframework</groupId>
            <artifactId>spring-tx</artifactId>
        </dependency>

        <dependency>
            <groupId>org.springframework.data</groupId>
            <artifactId>spring-data-commons</artifactId>
            <version>1.11.0.RELEASE</version>
        </dependency>

        <dependency>
            <groupId>org.springframework</groupId>
            <artifactId>spring-oxm</artifactId>
        </dependency>

        <dependency>
            <groupId>org.assertj</groupId>
            <artifactId>assertj-core</artifactId>
            <version>3.0.0</version>
        </dependency>

        <!--
            RUNTIME
        -->

        <dependency>
            <groupId>org.slf4j</groupId>
            <artifactId>jcl-over-slf4j</artifactId>
            <scope>runtime</scope>
        </dependency>


        <dependency>
            <groupId>ch.qos.logback</groupId>
            <artifactId>logback-classic</artifactId>
            <scope>runtime</scope>
        </dependency>

        <!--
        TEST
        -->

        <dependency>
            <groupId>junit</groupId>
            <artifactId>junit</artifactId>
            <scope>test</scope>
        </dependency>

        <dependency>
            <groupId>org.springframework</groupId>
            <artifactId>spring-test</artifactId>
            <scope>test</scope>
        </dependency>

        <dependency>
            <groupId>org.mockito</groupId>
            <artifactId>mockito-core</artifactId>
            <scope>test</scope>
        </dependency>

        <dependency>
            <groupId>org.xmlmatchers</groupId>
            <artifactId>xml-matchers</artifactId>
            <version>1.0-RC1</version>
        </dependency>

        <dependency>
            <groupId>xml-apis</groupId>
            <artifactId>xml-apis</artifactId>
            <version>1.4.01</version>
        </dependency>

    </dependencies>

    <build>
        <testResources>
            <testResource>
                <directory>${basedir}/src/test/resources</directory>
                <filtering>true</filtering>
            </testResource>
        </testResources>

        <plugins>

            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-resources-plugin</artifactId>
                <version>2.7</version>
                <configuration>
                    <overwrite>true</overwrite>
                </configuration>
            </plugin>

            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-compiler-plugin</artifactId>
                <version>3.1</version>
                <configuration>
                    <source>1.8</source>
                    <target>1.8</target>
                </configuration>
            </plugin>

            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-surefire-plugin</artifactId>
                <version>2.18.1</version>
                <configuration>
                    <excludes>
                        <exclude>**/GraphExporterTest.java</exclude>
                    </excludes>
                </configuration>
            </plugin>

            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-failsafe-plugin</artifactId>
                <version>2.18.1</version>
                <executions>
                    <execution>
                        <phase>integration-test</phase>
                        <goals>
                            <goal>integration-test</goal>
                        </goals>
                        <configuration>
                            <skipITs>${skipITs}</skipITs>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
        </plugins>
    </build>


    <!--
Cargo config based on
    http://stackoverflow.com/questions/8820977/maven-cargo-plugin-embedded-tomcat-7-configuration
    http://kaczanowscy.pl/tomek/2013-01/cargo-maven-two-tomcats
See fuseki configuration at
    http://jena.apache.org/documentation/fuseki2/fuseki-configuration.html
-->


    <profiles>
        <profile>
            <id>localhost</id>
            <activation>
                <activeByDefault>false</activeByDefault>
            </activation>
            <properties>
                <fedora.servlet.port>9090</fedora.servlet.port>
                <triplestore.servlet.port>3030</triplestore.servlet.port>
            </properties>

            <build>
                <plugins>
                    <plugin>
                        <groupId>org.apache.maven.plugins</groupId>
                        <artifactId>maven-surefire-plugin</artifactId>
                        <version>2.18.1</version>
                        <configuration>
                            <systemPropertyVariables>
                                <maven.profile.id>localhost</maven.profile.id>
                            </systemPropertyVariables>
                        </configuration>
                    </plugin>
                </plugins>
            </build>

        </profile>

        <profile>
            <id>cargo-integration-tests</id>
            <activation>
                <activeByDefault>true</activeByDefault>
            </activation>
            <dependencies>
                <dependency>
                    <groupId>org.apache.jena</groupId>
                    <artifactId>jena-fuseki-war</artifactId>
                    <version>2.0.0</version>
                    <type>war</type>
                    <scope>test</scope>
                </dependency>
                <dependency>
                    <groupId>org.fcrepo</groupId>
                    <artifactId>fcrepo-webapp</artifactId>
                    <version>4.2.0</version>
                    <type>war</type>
                    <scope>test</scope>
                </dependency>
                <dependency>
                    <groupId>org.fcrepo</groupId>
                    <artifactId>fcrepo-message-consumer-webapp</artifactId>
                    <version>4.2.0</version>
                    <type>war</type>
                    <scope>test</scope>
                </dependency>
            </dependencies>
            <build>
                <plugins>

                    <plugin>
                        <groupId>org.apache.maven.plugins</groupId>
                        <artifactId>maven-surefire-plugin</artifactId>
                        <version>2.18.1</version>
                        <configuration>
                            <systemPropertyVariables>
                                <maven.profile.id>cargo-integration-tests</maven.profile.id>
                            </systemPropertyVariables>
                        </configuration>
                    </plugin>

                    <plugin>
                        <groupId>org.codehaus.mojo</groupId>
                        <artifactId>build-helper-maven-plugin</artifactId>
                        <version>1.9.1</version>
                        <executions>
                            <execution>
                                <id>reserve-network-port</id>
                                <goals>
                                    <goal>reserve-network-port</goal>
                                </goals>
                                <phase>process-resources</phase>
                                <configuration>
                                    <portNames>
                                        <portName>triplestore.ajp.port</portName>
                                        <portName>triplestore.servlet.port</portName>
                                        <portName>triplestore.rmi.port</portName>
                                        <portName>fedora.ajp.port</portName>
                                        <portName>fedora.servlet.port</portName>
                                        <portName>fedora.rmi.port</portName>
                                        <portName>indexer.ajp.port</portName>
                                        <portName>indexer.servlet.port</portName>
                                        <portName>indexer.rmi.port</portName>
                                    </portNames>
                                </configuration>
                            </execution>
                        </executions>
                    </plugin>

                    <plugin>
                        <groupId>org.apache.maven.plugins</groupId>
                        <artifactId>maven-dependency-plugin</artifactId>
                        <version>2.10</version>
                        <executions>
                            <execution>
                                <id>unpack</id>
                                <phase>process-test-resources</phase>
                                <goals>
                                    <goal>unpack</goal>
                                </goals>
                                <configuration>
                                    <artifactItems>
                                        <artifactItem>
                                            <groupId>org.fcrepo</groupId>
                                            <artifactId>fcrepo-webapp</artifactId>
                                            <version>4.2.0</version>
                                            <type>war</type>
                                            <overWrite>true</overWrite>
                                            <outputDirectory>${project.build.directory}/fedora-webapp</outputDirectory>
                                        </artifactItem>
                                    </artifactItems>

                                </configuration>
                            </execution>
                        </executions>
                    </plugin>


                    <plugin>
                        <groupId>org.apache.maven.plugins</groupId>
                        <artifactId>maven-resources-plugin</artifactId>
                        <version>2.7</version>
                        <executions>
                            <!--
                            copies in-memory database "test" from test/etc/fuseki to FUSEKI_BASE/
                            -->
                            <execution>
                                <id>copy-fuseki</id>
                                <phase>generate-test-resources</phase>
                                <goals>
                                    <goal>copy-resources</goal>
                                </goals>
                                <configuration>
                                    <outputDirectory>${project.build.directory}/etc/fuseki</outputDirectory>
                                    <resources>
                                        <resource>
                                            <directory>${basedir}/src/test/etc/fuseki</directory>
                                            <filtering>false</filtering>
                                        </resource>
                                    </resources>
                                    <overwrite>true</overwrite>
                                </configuration>
                            </execution>
                            <execution>
                                <id>copy-fedora-node-types</id>
                                <phase>generate-test-resources</phase>
                                <goals>
                                    <goal>copy-resources</goal>
                                </goals>
                                <configuration>
                                    <outputDirectory>${project.build.directory}/fedora-webapp/WEB-INF/classes
                                    </outputDirectory>
                                    <resources>
                                        <resource>
                                            <directory>${basedir}/src/test/etc</directory>
                                            <filtering>false</filtering>
                                            <includes>
                                                <include>fedora-node-types.cnd</include>
                                            </includes>
                                        </resource>
                                    </resources>
                                    <overwrite>true</overwrite>
                                </configuration>
                            </execution>
                        </executions>
                    </plugin>

                    <plugin>
                        <groupId>org.codehaus.cargo</groupId>
                        <artifactId>cargo-maven2-plugin</artifactId>
                        <version>1.4.14</version>
                        <configuration>
                            <container>
                                <containerId>tomcat7x</containerId>
                                <artifactInstaller>
                                    <groupId>org.apache.tomcat</groupId>
                                    <artifactId>tomcat</artifactId>
                                    <version>7.0.62</version>
                                </artifactInstaller>
                            </container>
                        </configuration>
                        <executions>
                            <execution>
                                <id>triplestore-start</id>
                                <goals>
                                    <goal>start</goal>
                                </goals>
                                <phase>pre-integration-test</phase>
                                <configuration>
                                    <container>
                                        <systemProperties>
                                            <FUSEKI_BASE>${project.build.directory}/etc/fuseki</FUSEKI_BASE>
                                        </systemProperties>
                                    </container>
                                    <configuration>
                                        <properties>
                                            <cargo.tomcat.ajp.port>${triplestore.ajp.port}</cargo.tomcat.ajp.port>
                                            <cargo.servlet.port>${triplestore.servlet.port}</cargo.servlet.port>
                                            <cargo.rmi.port>${triplestore.rmi.port}</cargo.rmi.port>
                                        </properties>
                                        <home>${project.build.directory}/triplestore</home>
                                    </configuration>
                                    <deployables>
                                        <deployable>
                                            <groupId>org.apache.jena</groupId>
                                            <artifactId>jena-fuseki-war</artifactId>
                                            <type>war</type>
                                            <properties>
                                                <context>ROOT</context>
                                            </properties>
                                        </deployable>
                                    </deployables>
                                </configuration>
                            </execution>
                            <execution>
                                <id>triplestore-stop</id>
                                <goals>
                                    <goal>stop</goal>
                                </goals>
                                <phase>post-integration-test</phase>
                                <configuration>
                                    <configuration>
                                        <properties>
                                            <cargo.tomcat.ajp.port>${triplestore.ajp.port}</cargo.tomcat.ajp.port>
                                            <cargo.servlet.port>${triplestore.servlet.port}</cargo.servlet.port>
                                            <cargo.rmi.port>${triplestore.rmi.port}</cargo.rmi.port>
                                        </properties>
                                        <home>${project.build.directory}/triplestore</home>
                                    </configuration>
                                </configuration>
                            </execution>
                            <execution>
                                <id>fedora-start</id>
                                <goals>
                                    <goal>start</goal>
                                </goals>
                                <phase>pre-integration-test</phase>
                                <configuration>
                                    <configuration>
                                        <properties>
                                            <cargo.tomcat.ajp.port>${fedora.ajp.port}</cargo.tomcat.ajp.port>
                                            <cargo.servlet.port>${fedora.servlet.port}</cargo.servlet.port>
                                            <cargo.rmi.port>${fedora.rmi.port}</cargo.rmi.port>
                                        </properties>
                                        <home>${project.build.directory}/fedora</home>
                                    </configuration>
                                    <deployables>
                                        <deployable>
                                            <groupId>org.fcrepo</groupId>
                                            <artifactId>fcrepo-webapp</artifactId>
                                            <type>war</type>
                                            <location>${project.build.directory}/fedora-webapp</location>
                                            <properties>
                                                <context>ROOT</context>
                                            </properties>
                                        </deployable>
                                    </deployables>
                                </configuration>
                            </execution>
                            <execution>
                                <id>fedora-stop</id>
                                <goals>
                                    <goal>stop</goal>
                                </goals>
                                <phase>post-integration-test</phase>
                                <configuration>
                                    <configuration>
                                        <properties>
                                            <cargo.tomcat.ajp.port>${fedora.ajp.port}</cargo.tomcat.ajp.port>
                                            <cargo.servlet.port>${fedora.servlet.port}</cargo.servlet.port>
                                            <cargo.rmi.port>${fedora.rmi.port}</cargo.rmi.port>
                                        </properties>
                                        <home>${project.build.directory}/fedora</home>
                                    </configuration>
                                </configuration>
                            </execution>
                            <execution>
                                <id>indexer-start</id>
                                <goals>
                                    <goal>${indexer.start.mode}</goal>
                                </goals>
                                <phase>pre-integration-test</phase>
                                <configuration>
                                    <container>
                                        <systemProperties>
                                            <fcrepo.port>${fedora.servlet.port}</fcrepo.port>
                                            <fuseki.port>${triplestore.servlet.port}</fuseki.port>
                                            <fuseki.dynamic.test.port>${triplestore.servlet.port}
                                            </fuseki.dynamic.test.port>
                                        </systemProperties>
                                    </container>
                                    <configuration>
                                        <properties>
                                            <cargo.tomcat.ajp.port>${indexer.ajp.port}</cargo.tomcat.ajp.port>
                                            <cargo.servlet.port>${indexer.servlet.port}</cargo.servlet.port>
                                            <cargo.rmi.port>${indexer.rmi.port}</cargo.rmi.port>
                                        </properties>
                                        <home>${project.build.directory}/indexer</home>
                                    </configuration>
                                    <deployables>
                                        <deployable>
                                            <groupId>org.fcrepo</groupId>
                                            <artifactId>fcrepo-message-consumer-webapp</artifactId>
                                            <type>war</type>
                                            <properties>
                                                <context>ROOT</context>
                                            </properties>
                                        </deployable>
                                    </deployables>
                                </configuration>
                            </execution>
                            <execution>
                                <id>indexer-stop</id>
                                <goals>
                                    <goal>stop</goal>
                                </goals>
                                <phase>post-integration-test</phase>
                                <configuration>
                                    <configuration>
                                        <properties>
                                            <cargo.tomcat.ajp.port>${indexer.ajp.port}</cargo.tomcat.ajp.port>
                                            <cargo.servlet.port>${indexer.servlet.port}</cargo.servlet.port>
                                            <cargo.rmi.port>${indexer.rmi.port}</cargo.rmi.port>
                                        </properties>
                                        <home>${project.build.directory}/indexer</home>
                                    </configuration>
                                </configuration>
                            </execution>
                        </executions>
                    </plugin>
                </plugins>
            </build>
        </profile>
    </profiles>

    <dependencyManagement>
        <dependencies>
            <dependency>
                <groupId>io.spring.platform</groupId>
                <artifactId>platform-bom</artifactId>
                <version>1.1.2.RELEASE</version>
                <type>pom</type>
                <scope>import</scope>
            </dependency>
        </dependencies>
    </dependencyManagement>

    <repositories>
        <repository>
            <id>spring-libs-snapshot</id>
            <url>https://repo.spring.io/libs-snapshot</url>
        </repository>
    </repositories>

</project>